/* profile.wxss */
.profile-container {
  padding: 20rpx;
  background: #f5f6fa;
}

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  margin-right: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-detail {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-level {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.level-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 统计数据样式 */
.stats-container {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx;
  position: relative;
}

.stats-item:first-child::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 2rpx;
  background: #eee;
}

.stats-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.history_finish_icon {
  width: 70rpx;
  height: 70rpx;
}

.stats-icon image {
  width: 100%;
  height: 100%;
}

.stats-content {
  flex: 1;
}

.stats-num {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 报告区域样式 */
.report-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 170rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.charts-container {
  margin-bottom: 30rpx;
}

.chart-item {
  width: 100%;
  height: 500rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  overflow: hidden;
  margin-top: 30rpx;
}

/* 词云区域样式 */
.word-cloud {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.word-cloud-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.chart-container {
  width: 100%;
  height: 300px;
  margin: 20px 0;
}

ec-canvas {
  width: 100%;
  height: 100%;
}