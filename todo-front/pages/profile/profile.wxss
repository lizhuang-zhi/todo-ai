/* profile.wxss */
.profile-container {
  padding: 20rpx;
  background: #f5f6fa;
}

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  margin-right: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-detail {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-level {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.level-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.more {
  margin-left: 45%;
}

/* 历史会话 */
.history-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.history-container {
  height: 880rpx;
  overflow: scroll;
}

.conversation_box {
  background: #f8f9fa;
  border-radius: 10rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.title_box {
  color: #666;
  display: flex;
  align-items: center;
}

.left_icon {
  width: 20%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right_tit {
  width: 80%;
}

.im_icon {
  width: 72rpx;
  height: 72rpx;
  margin-right: 8rpx;
  margin-left: 20rpx;
}

.im_top_box {
  width: 95%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.im_title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.im_share {
  background: linear-gradient(90deg, #ff7e5f, #feb47b);
  color: white;
  font-weight: bold;
  border: none;
  border-radius: 8rpx;
  padding: 3rpx 16rpx;
  cursor: pointer;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  font-size: 22rpx;
  position: relative;
}

.im_last_cont {
  font-size: 26rpx;
  color: #999;
}


