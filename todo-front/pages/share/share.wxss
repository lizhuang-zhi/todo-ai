.share-container {
    min-height: 100vh;
    background: #ff9345;
    padding: 40rpx 30rpx;
  }
  
  .user-info {
    display: flex;
    align-items: center;
    margin-bottom: 40rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .name-wrap {
    display: flex;
    flex-direction: column;
  }
  
  .name {
    font-size: 36rpx;
    color: #fff;
    font-weight: 500;
    margin-bottom: 8rpx;
  }
  
  .desc {
    font-size: 28rpx;
    color: rgba(255,255,255,0.9);
  }
  
  .invite-text {
    background: rgba(255,255,255,0.9);
    padding: 24rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 40rpx;
  }
  
  .vip-card {
    background: #4a4a4a;
    border-radius: 20rpx;
    padding: 40rpx;
    position: relative;
    margin-bottom: 40rpx;
  }
  
  .card-content {
    display: flex;
    align-items: center;
    margin-bottom: 60rpx;
  }
  
  .days {
    font-size: 120rpx;
    color: #ffd700;
    font-weight: bold;
    margin-right: 20rpx;
  }
  
  .text {
    color: #ffd700;
    font-size: 40rpx;
  }
  
  .crown {
    width: 40rpx;
    height: 40rpx;
    margin-left: auto;
    margin-right: 10rpx;
  }
  
  .vip-text {
    color: #ffd700;
    font-size: 28rpx;
  }
  
  .card-bottom {
    position: absolute;
    bottom: 120rpx;
    left: 0;
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: center;
  }
  
  .coin {
    width: 60rpx;
    height: 60rpx;
  }
  
  .get-btn {
    position: absolute;
    bottom: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #ffd700;
    color: #333;
    font-size: 32rpx;
    border-radius: 40rpx;
    border: none;
  }
  
  .intro-card {
    background: #fff;
    border-radius: 20rpx;
    padding: 40rpx;
  }
  
  .intro-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .intro-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 30rpx;
  }
  
  .num {
    font-size: 40rpx;
    color: #ff9345;
    font-weight: bold;
    margin-right: 20rpx;
    margin-top: -8rpx;
  }
  
  .content {
    flex: 1;
  }
  
  .content .title {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 16rpx;
  }
  
  .content .desc {
    font-size: 26rpx;
    color: #666;
    line-height: 1.6;
  }

/* 前面的样式保持不变,修改会员卡片相关样式为计划卡片样式 */

.plan-card {
    background: #fff;
    border-radius: 20rpx;
    padding: 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  }
  
  .plan-header {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .plan-title {
    font-size: 28rpx;
    color: #333;
    margin-right: 20rpx;
  }
  
  .plan-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    flex: 1;
  }
  
  .plan-date {
    font-size: 26rpx;
    color: #999;
  }
  
  .plan-content {
    margin-bottom: 30rpx;
  }
  
  .sub-title {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
    display: block;
  }
  
  .task-list {
    padding: 0 20rpx;
  }
  
  .task-item {
    height: 80rpx;
    line-height: 80rpx;
    background: #f8f8f8;
    border-radius: 40rpx;
    padding: 0 30rpx;
    font-size: 26rpx;
    color: #333;
    margin-bottom: 20rpx;
    border: 1rpx solid #eee;
  }
  
  .join-btn {
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #ff9345;
    color: #fff;
    font-size: 32rpx;
    border-radius: 40rpx;
    border: none;
    margin-top: 30rpx;
  }
  
  /* 其他样式保持不变 */