/* 日历 */
.calendar_container {
  height: 50vh;
}

/* 新增待办按钮 */
.add-todo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #FF1D23;
  display: flex;
  align-items: center;
  justify-content: center;

  position: fixed;
  right: 40rpx;
  bottom: 50rpx;
  z-index: 999;
}

.add-todo .add-img {
  width: 50%;
  height: 50%;
}

/* 弹出框 */
.pop-box {
  margin-top: 70rpx;
}

.pop-box .priority {
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.pop-box .priority .priority-label {
  width: 20%;
  font-size: 28rpx;
  color: #646544;
  margin-right: 80rpx;
}

.van-radio-group {
  width: 80%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.van-radio {
  margin-top: 10rpx;
}

.operate {
  margin-top: 45rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.van-button {
  margin-right: 20rpx;
}

/* TODO列表 */
.todo-list {
  padding: 20rpx;
  background: rgb(240, 240, 240);
  margin: 10rpx 10rpx;
  border-radius: 15rpx;
}

.date-title {
  font-size: 3c0rpx;
  color: #999;
}

.todo-items {
  width: 100%;
}

.item-wrap {
  position: relative; /* 添加相对定位 */
  width: 100%;
  overflow: hidden;
  background: #fff;
  border-radius: 8rpx;
}

.item-content {
  position: relative; /* 添加相对定位 */
  width: 100%;
  padding: 20rpx;
  line-height: 1.6;
  background: rgb(240, 240, 240);
  transition: all 0.4s;
  transform: translateX(0);
  z-index: 2; /* 添加层级 */

  display: flex;
  align-items: center;
}

.finish {
  margin-right: 20rpx;
}

.item-title {
  font-size: 32rpx;
}

.touch-move-active {
  transform: translateX(-220rpx);
}

.del-btn-group {
  position: absolute;
  right: 0; /* 修改位置 */
  top: 0;
  height: 100%;
  width: 220rpx;
  display: flex;
  z-index: 1; /* 添加层级 */
}

.btn-delete, .btn-edit {
  width: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
}

.btn-delete {
  background: #ff4444;
}

.btn-edit {
  background: #ffa000;
}