.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  background-color: #ffffff;
  padding: 0 10px;
  border-bottom: 1px solid #e0e0e0;
  margin-top: 80rpx;
}
.back_btn {
  width: 40rpx;
  height: 40rpx;
}
.top_title {
  margin-right: 10px;
}

/* 容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 50px - 80rpx - 30rpx);
  background-color: #f9f9f9;
}

/* 消息区域 */
.messages {
  flex: 1;
  overflow: scroll;
}

.message-row {
  display: flex;
  align-items: flex-start;
  margin: 10px 0;
}

.message-row.user {
  justify-content: flex-end;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 0 10px;
}

.message-bubble {
  max-width: 70%;
  padding: 10px 15px;
  border-radius: 10px;
  font-size: 28rpx;
  line-height: 1.4;
  word-break: break-word;
  position: relative;
}

/* AI 消息样式 */
.message-bubble.ai {
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  color: #333;
}

/* 用户消息样式 */
.message-bubble.user {
  background-color: #007aff;
  background-color: #ff9900;
  color: #fff;
  text-align: right;
}

/* 输入框 */
.input-container {
  display: flex;
  align-items: flex-start;
  padding: 10px;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
}

.input {
  flex: 1;
  padding: 10px;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
  margin-right: 10px;
  height: 100rpx;
  font-size: 28rpx;
}

.send-button {
  background-color: #007aff;
  background-color: #ff4800;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 28rpx;
}
