/* 容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 30rpx);
  background-color: #f9f9f9;
}

/* 消息区域 */
.messages {
  flex: 1;
  overflow: scroll;
}

.message-row {
  display: flex;
  align-items: flex-start;
  margin: 10px 0;
}

.message-row.user {
  justify-content: flex-end;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 0 10px;
}

.message-bubble {
  max-width: 70%;
  padding: 10px 15px;
  border-radius: 10px;
  font-size: 28rpx;
  line-height: 1.4;
  word-break: break-word;
  position: relative;
}

/* AI 消息样式 */
.message-bubble.ai {
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  color: #333;
}

/* 用户消息样式 */
.message-bubble.user {
  background-color: #007aff;
  background-color: #ff9900;
  color: #fff;
  text-align: right;
}

/* 输入框 */
.input-container {
  display: flex;
  align-items: flex-start;
  padding: 10px;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
}

.input {
  flex: 1;
  padding: 10px;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
  margin-right: 10px;
  height: 100rpx;
  font-size: 28rpx;
}

.send-button {
  background-color: #007aff;
  background-color: #ff4800;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 28rpx;
}


/* 语音按钮 */
.chat-input-area {
  display: flex;
  padding: 20rpx;
  align-items: center;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.voice-btn {
  height: 70rpx;
  padding: 0 30rpx;
  background: #f8f8f8;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.voice-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.record-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-tip {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
}

.record-tip image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.cancel-tip {
  color: #ff5151;
  font-size: 24rpx;
  margin-top: 20rpx;
}