.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.messages {
  flex: 1;
  padding: 10px;
  overflow: scroll;
}

.message {
  margin: 5px 0;
  padding: 10px;
  border-radius: 10px;
  max-width: 70%;
  word-break: break-word;
}

.message.user {
  align-self: flex-end;
  background-color: #dcf8c6;
}

.message.ai {
  align-self: flex-start;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
}

.input-container {
  display: flex;
  padding: 10px;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
}

.input {
  flex: 1;
  padding: 10px;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
  margin-right: 10px;
}

.send-button {
  background-color: #007aff;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}
