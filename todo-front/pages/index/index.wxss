}

/* 日历 */
.calendar_container {
  height: 50vh;
}

/* 新增待办按钮 */
.add-todo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #FF1D23;
  display: flex;
  align-items: center;
  justify-content: center;

  position: fixed;
  right: 40rpx;
  bottom: 250rpx;
  z-index: 999;
}

.add-todo .add-img {
  width: 50%;
  height: 50%;
}

/* 弹出框 */
.pop-box {
  margin-top: 70rpx;
}

.pop-box .priority {
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.pop-box .priority .priority-label {
  width: 20%;
  font-size: 28rpx;
  color: #646544;
  margin-right: 80rpx;
}

.van-radio-group {
  width: 80%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.van-radio {
  margin-top: 10rpx;
}

.operate {
  margin-top: 45rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.van-button {
  margin-right: 20rpx;
}

/* TODO列表 */
.todo-list {
  padding: 20rpx;
  background: rgb(240, 240, 240);
  margin: 10rpx 10rpx;
  border-radius: 15rpx;
  height: 33vh;
  overflow: scroll;
}

.todo-top-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-title {
  font-size: 3c0rpx;
  color: #999;
  margin-left: 10rpx;
}

.date-ai-suggest {
  margin-right: 10rpx;
  padding: 8rpx 25rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 25rpx rgba(0, 0, 0, 0.1);

  display: flex;
  align-items: center;
  justify-content: center;

  position: relative;
}

.ai_tit {
  color: #333;
  font-size: 24rpx;
  margin-left: 5rpx;
}

.think_icon {
  width: 40rpx;
  height: 40rpx;
}

.red_dot {
  width: 15rpx;
  height: 15rpx;
  background-color: red;
  border-radius: 50%;

  position: absolute;
  top: 10%;
  right: 10%;
}

.todo-items {
  width: 100%;
}

.item-wrap {
  position: relative; /* 添加相对定位 */
  width: 100%;
  overflow: hidden;
  background: #fff;
  border-radius: 8rpx;
}

.item-content {
  position: relative; /* 添加相对定位 */
  width: 100%;
  padding: 20rpx;
  line-height: 1.6;
  background: rgb(240, 240, 240);
  transition: all 0.4s;
  transform: translateX(0);
  z-index: 2; /* 添加层级 */

  display: flex;
  align-items: center;
}

.finish {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}

.finish .todo_icon {
  width: 45rpx;
  height: 45rpx;
}

.right_cont_container {
  display: flex;
  align-items: center;
}

.item-title {
  font-size: 32rpx;
}

.touch-move-active {
  transform: translateX(-240rpx);
}

.ai_suggest {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.ai_suggest_icon {
  width: 100%;
  height: 100%;
}

.del-btn-group {
  position: absolute;
  right: 0; /* 修改位置 */
  top: 0;
  height: 100%;
  width: 200rpx;
  display: flex;
  z-index: 1; /* 添加层级 */
}

.btn-delete, .btn-edit {
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
}

.btn-delete {
  background: #ff4444;
}

.btn-edit {
  background: #ffa000;
}

/* AI建议展示框 */
.ai_suggest_pop {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.suggest-text {
  white-space: pre-wrap;  /* 保留换行和空格 */
  word-wrap: break-word;  /* 允许长单词换行 */
  display: block;
  font-size: 26rpx;
}

/* AI每日规划合理化建议展示框 */
.date_ai_suggest_pop {
  padding: 20rpx 10rpx;
  font-size: 32rpx;
}

.date_ai_suggest_text {
  font-size: 26rpx;
}

.custom-title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.title-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}