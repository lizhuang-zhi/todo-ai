.top_title {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.challenge_icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 5rpx;
}

.tit {
  font-size: 45rpx;
  color: #333;
}


/* TODO列表 */
.todo-list {
  padding: 20rpx;
  background: rgb(240, 240, 240);
  margin: 10rpx 10rpx;
  border-radius: 15rpx;
  height: 33vh;
  overflow: scroll;
}

.date-title {
  font-size: 3c0rpx;
  color: #999;
}

.todo-items {
  width: 100%;
}

.item-wrap {
  position: relative; /* 添加相对定位 */
  width: 100%;
  overflow: hidden;
  background: #fff;
  border-radius: 8rpx;
}

.item-content {
  position: relative; /* 添加相对定位 */
  width: 100%;
  padding: 20rpx;
  line-height: 1.6;
  background: rgb(240, 240, 240);
  transition: all 0.4s;
  transform: translateX(0);
  z-index: 2; /* 添加层级 */

  display: flex;
  align-items: center;
}

.finish {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}

.finish .todo_icon {
  width: 45rpx;
  height: 45rpx;
}

.item-title {
  font-size: 32rpx;
}

.touch-move-active {
  transform: translateX(-240rpx);
}

.del-btn-group {
  position: absolute;
  right: 0; /* 修改位置 */
  top: 0;
  height: 100%;
  width: 200rpx;
  display: flex;
  z-index: 1; /* 添加层级 */
}

.btn-delete, .btn-edit {
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
}

.btn-delete {
  background: #ff4444;
}

.btn-edit {
  background: #ffa000;
}
